generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  name          String?        @db.VarChar(255)
  password      String?        @db.VarChar(255)
  user_type     UserType?      @map("type")
  avatar        String?        @db.VarChar(255)
  email         String         @db.VarChar(255)
  refreshTokens RefreshToken[]

  @@map("users")
}

model Page {
  id          String  @id @default(uuid()) @db.Uuid
  title       String? @db.VarChar(255)
  description String? @db.VarChar(255)
  slug        String? @db.VarChar(255)

  @@map("pages")
}

model BlockUI {
  id String @id @default(uuid()) @db.Uuid

  @@map("block_ui")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]

  @@map("categories")
}

model Product {
  id          Int                      @id @default(autoincrement())
  code        String                   @unique
  name        String
  unit        String
  categoryId  Int?
  inventories Inventory[]
  category    Category?                @relation(fields: [categoryId], references: [id])
  details     StockTransactionDetail[]

  @@map("products")
}

model Warehouse {
  id           Int                @id @default(autoincrement())
  code         String             @unique
  name         String
  location     String?
  inventories  Inventory[]
  transactions StockTransaction[]

  @@map("warehouses")
}

model StockTransaction {
  id              Int                      @id @default(autoincrement())
  code            String                   @unique
  warehouseId     Int
  transactionType TransactionType
  transactionDate DateTime
  note            String?
  createdAt       DateTime                 @default(now())
  details         StockTransactionDetail[]
  warehouse       Warehouse                @relation(fields: [warehouseId], references: [id])

  @@map("stock_transactions")
}

model StockTransactionDetail {
  id            Int              @id @default(autoincrement())
  transactionId Int
  productId     Int
  quantity      Decimal
  unitPrice     Decimal?
  product       Product          @relation(fields: [productId], references: [id])
  transaction   StockTransaction @relation(fields: [transactionId], references: [id])

  @@map("stock_transaction_details")
}

model Inventory {
  id          Int       @id @default(autoincrement())
  warehouseId Int
  productId   Int
  quantity    Decimal   @default(0)
  lastUpdated DateTime  @default(now())
  product     Product   @relation(fields: [productId], references: [id])
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])

  @@unique([warehouseId, productId])
  @@map("inventories")
}

model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  token     String   @unique
  userId    String   @db.Uuid
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

enum UserType {
  admin
  client
  collaborator
}

enum TransactionType {
  IMPORT
  EXPORT
}


model SelectCard {
  id             Int      @id @default(autoincrement())
  title          String
  description    String?
  content        String?
  page           String
  numericalOrder Int       @default(0)
  icon           String?
  image          String?
  backgroundColor String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}


model TitlePage {
  id            Int  @id @default(autoincrement())
  title          String
  description    String?
  page           String

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
